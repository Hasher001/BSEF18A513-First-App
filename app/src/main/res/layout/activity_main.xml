<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <Button
        android:id="@+id/grey"
        android:layout_width="70dp"
        android:layout_height="78dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#7A7A7A"
        android:onClick="grey"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purple" />

    <Button
        android:id="@+id/blue"
        android:layout_width="70dp"
        android:layout_height="78dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#3F51B5"
        android:onClick="blue"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

    <Button
        android:id="@+id/red"
        android:layout_width="70dp"
        android:layout_height="78dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#F44336"
        android:onClick="red"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

    <Button
        android:id="@+id/yellow"
        android:layout_width="70dp"
        android:layout_height="78dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#FAE002"
        android:onClick="yellow"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Green" />

    <Button
        android:id="@+id/purple"
        android:layout_width="70dp"
        android:layout_height="78dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#9C27B0"
        android:onClick="purple"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red" />

    <Button
        android:id="@+id/orange"
        android:layout_width="70dp"
        android:layout_height="78dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#FF5722"
        android:onClick="orange"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue" />

    <TextView
        android:id="@+id/Output"
        android:layout_width="339dp"
        android:layout_height="78dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:capitalize="characters"
        android:fontFamily="sans-serif-black"
        android:text="COLOR"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="60sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Green"
        android:layout_width="70dp"
        android:layout_height="78dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#009C08"
        android:onClick="green"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

    <Button
        android:id="@+id/pink"
        android:layout_width="70dp"
        android:layout_height="78dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#FF19E0"
        android:onClick="pink"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yellow" />

    <Button
        android:id="@+id/brown"
        android:layout_width="70dp"
        android:layout_height="78dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#4E3B00"
        android:onClick="brown"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pink"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/aqua"
        android:layout_width="70dp"
        android:layout_height="78dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#03A9F4"
        android:onClick="aqua"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Black"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/golden"
        android:layout_width="70dp"
        android:layout_height="78dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#FF9800"
        android:onClick="golden"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grey"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Black"
        android:layout_width="70dp"
        android:layout_height="78dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#222222"
        android:onClick="black"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orange" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="318dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Touch any color to know its name"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Output" />

</androidx.constraintlayout.widget.ConstraintLayout>